[Unit]
Description=Banner Tomcat8 service
After=syslog.target network.target


[Service]
Type=forking
User=tomcat8
Group=tomcat8
WorkingDirectory=/usr/share/tomcat8
Environment="JAVA_HOME=/usr/lib/jvm/jre/"
Environment="CATALINA_PID=/var/cache/tomcat8/temp/tomcat8.pid"
Environment="CATALINA_BASE=/usr/share/tomcat8/"
Environment="CATALINA_HOME=/usr/share/tomcat8/"
ExecStart=/usr/share/tomcat8/bin/startup.sh
ExecStop=/usr/share/tomcat8/bin/shutdown.sh

[Install]
WantedBy=multi-user.target

